<header class="text-center my-5"><h1>Burgers!</h1><hr></header>

<div class="container">
<div class="row">
  <div class="col-4 offset-2">
<h2>Burgers to eat!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class="col-4 offset-1">
<h2>Devoured burgers!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/if}}
  {{/each}}
</ul>
</div>
</div>
</div>

<div class="row justify-content-center">
<header class="text-center mt-4"><h2>Add a Burger:</h2></header>
</div>

<div class="row justify-content-center">
<form class="create-form">

  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="bu" name="burger_name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Ready to eat
  </div>

  <button class="btn btn-success" type="submit">Add Burger</button>
</form>
</div>
